package:
    name: {{ name }}
    version: {{ version }}
source:
    path: .
build:
    script: {{ build.command }}
requirements:
    host:
        - python {{ python }}
        - setuptools {{ setuptools }}
    run:
        - python {{ python }}
        {{ requirements.qiime2 }}
        {{ requirements.anaconda }}
test:
    imports: {{ test.imports }}
    commands: {{ test.commands }}

